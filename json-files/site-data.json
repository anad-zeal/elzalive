{
  "slideshowTemplate": {
    "scriptToLoad": "assets/js/slideshow.js",
    "wrapper": { "tag": "div", "class": "container", "role": "region" },
    "slideContainerClass": "slideshow",
    "autoplay": false,
    "keyboardControls": true,
    "previousButton": {
      "wrapperClass": "prev-arrow",
      "buttonId": "prev-slide",
      "imgSrc": "assets/images/misc-images/prev.png",
      "imgAlt": "Previous Slide",
      "ariaLabel": "Go to previous slide"
    },
    "nextButton": {
      "wrapperClass": "next-arrow",
      "buttonId": "next-slide",
      "imgSrc": "assets/images/misc-images/next.png",
      "imgAlt": "Next Slide",
      "ariaLabel": "Go to next slide"
    },
    "caption": { "paragraphId": "caption-text", "ariaLabel": "Slide caption" },
    "description": {
      "paragraphId": "description-text",
      "ariaLabel": "Slide description"
    },
    "rtnArrow": {
      "wrapperClass": "return-arrow",
      "imgSrc": "assets/images/misc-images/arrow-return.png",
      "imgAlt": "Return to Artworks",
      "ariaLabel": "Return to Artworks Gallery"
    }
  },
  "pages": {
    "home": {
      "type": "cardGrid",
      "title": "Portfolio Home",
      "content": [
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/encaustic-paintings",
              "text": "Encaustic",
              "ariaLabel": "Go to Encaustic Paintings"
            },
            "paragraph": "Layered wax and pigment exploring texture and translucency."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/drip-series-paintings",
              "text": "Drip Series",
              "ariaLabel": "Go to Drip Series"
            },
            "paragraph": "Dynamic, controlled chaos capturing movement in paint."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/black-and-white-paintings",
              "text": "Black & White",
              "ariaLabel": "Go to Black and White Paintings"
            },
            "paragraph": "Monochromatic studies focusing on light, shadow, and form."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/project-series-paintings",
              "text": "Projects",
              "ariaLabel": "Go to Project Series"
            },
            "paragraph": "Thematic collections and specific artistic explorations."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/decorative",
              "text": "Decorative",
              "ariaLabel": "Go to Decorative Painting"
            },
            "paragraph": "Murals, faux finishes, and custom decorative applications."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/historic-preservation",
              "text": "Restoration",
              "ariaLabel": "Go to Historic Preservation"
            },
            "paragraph": "Restoring and preserving architectural history and detail."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/biography",
              "text": "Biography",
              "ariaLabel": "Go to Biography"
            },
            "paragraph": "About the artist, the journey, and the philosophy."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/contact",
              "text": "Contact",
              "ariaLabel": "Go to Contact"
            },
            "paragraph": "Get in touch for inquiries, commissions, or collaborations."
          }
        }
      ]
    },
    "encaustic-paintings": {
      "type": "slideshow",
      "title": "Encaustic Paintings",
      "gallerySource": "encaustic-slideshow.json",
      "ariaLabel": "Encaustic Paintings Slideshow"
    },
    "drip-series-paintings": {
      "type": "slideshow",
      "title": "Drip Series Paintings",
      "gallerySource": "drip-series-slideshow.json",
      "ariaLabel": "Drip Series Paintings Slideshow"
    },
    "black-and-white-paintings": {
      "type": "slideshow",
      "title": "Black and White Paintings",
      "gallerySource": "black-and-white-slideshow.json",
      "ariaLabel": "Black and White Paintings Slideshow"
    },
    "project-series-paintings": {
      "type": "slideshow",
      "title": "Project Series Paintings",
      "gallerySource": "projects-slideshow.json",
      "ariaLabel": "Project Series Paintings Slideshow"
    },
    "decorative": {
      "type": "slideshow",
      "title": "Decorative Painting",
      "gallerySource": "decorative-slideshow.json",
      "ariaLabel": "Decorative Painting Slideshow"
    },
    "historic-preservation": {
      "type": "slideshow",
      "title": "Historic Preservation",
      "gallerySource": "preservation-slideshow.json",
      "ariaLabel": "Historic Preservation Slideshow"
    },
    "biography": {
      "type": "contentSection",
      "title": "Biography",
      "content": {
        "tag": "article",
        "attributes": { "class": "content-section bio" },
        "paragraphs": [
          "This is where the artist's biography will go.",
          "Add more paragraphs as needed in the JSON file."
        ]
      }
    },
    "contact": {
      "type": "contactForm",
      "title": "Contact",
      "content": {
        "wrapper": {
          "tag": "section",
          "attributes": {
            "class": "contact-wrapper",
            "aria-labelledby": "contact-page-heading"
          }
        },
        "form": {
          "attributes": { "method": "post", "action": "", "class": "ccform" }
        },
        "fields": [
          {
            "type": "text",
            "icon": "fa-user",
            "placeholder": "Your Name",
            "required": true
          },
          {
            "type": "email",
            "icon": "fa-envelope",
            "placeholder": "Email",
            "required": true
          },
          {
            "type": "text",
            "icon": "fa-info",
            "placeholder": "Subject",
            "required": true
          },
          {
            "type": "textarea",
            "icon": "fa-comment",
            "placeholder": "Message",
            "name": "comments",
            "rows": 8,
            "required": true
          },
          { "type": "submit", "value": "Submit" }
        ]
      }
    }
  }
}
