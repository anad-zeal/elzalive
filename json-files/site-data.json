{
  "slideshowTemplate": {
    "scriptToLoad": "/assets/js/slideshow.js",
    "wrapper": { "tag": "div", "class": "container", "role": "region" },
    "slideContainerClass": "slideshow",
    "autoplay": false,
    "keyboardControls": true,
    "ariaLabel": "Artwork Slideshow",
    "caption": {
      "paragraphId": "caption-text",
      "ariaLabel": "Slide caption"
    },
    "description": {
      "paragraphId": "description-text",
      "ariaLabel": "Slide description"
    },
    "rtnArrow": {
      "wrapperClass": "return-arrow",
      "imgSrc": "/assets/images/misc-images/arrow-return.png",
      "imgAlt": "Return to Artworks",
      "ariaLabel": "Return to Artworks Gallery"
    }
  },
  "pages": {
    "encaustic-paintings": {
      "type": "slideshow",
      "title": "Encaustic Paintings",
      "gallerySource": "encaustic-slideshow.json",
      "ariaLabel": "Encaustic Paintings Slideshow"
    },
    "drip-series-paintings": {
      "type": "slideshow",
      "title": "Drip Series Paintings",
      "gallerySource": "drip-series-slideshow.json",
      "ariaLabel": "Drip Series Paintings Slideshow"
    },
    "black-and-white-paintings": {
      "type": "slideshow",
      "title": "Black and White Paintings",
      "gallerySource": "black-and-white-slideshow.json",
      "ariaLabel": "Black and White Paintings Slideshow"
    },
    "project-series-paintings": {
      "type": "slideshow",
      "title": "Project Series Paintings",
      "gallerySource": "projects-slideshow.json",
      "ariaLabel": "Project Series Paintings Slideshow"
    },
    "home": {
      "type": "cardGrid",
      "title": "Home",
      "content": [
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/decorative",
              "class": "page-link",
              "ariaLabel": "Go to Decorative Painting",
              "text": "Decorative Painting"
            },
            "paragraph": "A collection of intricate and expressive decorative works, showcasing a mastery of color, texture, and form."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/historic-preservation",
              "class": "page-link",
              "ariaLabel": "Go to Historic Preservation Projects",
              "text": "Historic Preservation"
            },
            "paragraph": "Detailed and respectful preservation work that breathes new life into historic artifacts and architectural elements."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/artworks",
              "class": "page-link",
              "ariaLabel": "Go to the Artworks Page",
              "text": "Artwork Pages"
            },
            "paragraph": "Explore various series of paintings, from abstract explorations to focused thematic studies in different mediums."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/",
              "class": "page-link",
              "ariaLabel": "Go to Miscellaneous",
              "text": "Miscellaneous"
            },
            "paragraph": "A collection of various artistic explorations, unique pieces, and creative studies that defy easy categorization."
          }
        }
      ]
    },
    "artworks": {
      "title": "Artworks",
      "type": "cardGrid",
      "content": [
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/encaustic-paintings",
              "class": "page-link",
              "ariaLabel": "View the Encaustic Paintings gallery",
              "text": "Encaustic Paintings"
            },
            "paragraph": "A collection of vibrant and textured works created with heated beeswax and colored pigments."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/drip-series-paintings",
              "class": "page-link",
              "ariaLabel": "View the Drip Series Paintings gallery",
              "text": "Drip Series"
            },
            "paragraph": "Dynamic and expressive paintings created through a controlled yet spontaneous dripping technique."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/black-and-white-paintings",
              "class": "page-link",
              "ariaLabel": "View the Black and White Paintings gallery",
              "text": "Black and White"
            },
            "paragraph": "Explore the dramatic interplay of light, shadow, and form in these monochromatic studies."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "class": "page",
            "link": {
              "href": "/project-series-paintings",
              "class": "page-link",
              "ariaLabel": "View the Project Series Paintings gallery",
              "text": "Project Series"
            },
            "paragraph": "A curated series of works exploring a singular, focused theme through various artistic mediums."
          }
        }
      ]
    },
    "decorative": {
      "type": "slideshow",
      "title": "Decorative Painting",
      "gallerySource": "decorative-slideshow.json",
      "ariaLabel": "Decorative Painting Slideshow"
    },
    "historic-preservation": {
      "type": "slideshow",
      "title": "Historic Preservation",
      "gallerySource": "preservation-slideshow.json",
      "ariaLabel": "Historic Preservation Slideshow"
    },
    "biography": {
      "type": "contentSection",
      "title": "Biography",
      "content": {
        "tag": "article",
        "attributes": { "class": "content-section bio" },
        "paragraphs": [
          "This is where the artist's biography will go.",
          "Add more paragraphs as needed."
        ]
      }
    },
    "contact": {
      "type": "contactForm",
      "title": "Contact",
      "content": {
        "wrapper": {
          "tag": "div",
          "attributes": {
            "class": "contact-wrapper"
          }
        },
        "form": {
          "tag": "form",
          "attributes": {
            "id": "contact",
            "action": "/submit-contact",
            "method": "post"
          },
          "headers": [
            { "tag": "h3", "text": "Quick Contact" },
            { "tag": "h4", "text": "Contact us today, and get a reply within 24 hours!" }
          ]
        },
        "fields": [
          {
            "tag": "input",
            "wrapperTag": "fieldset",
            "attributes": {
              "placeholder": "Your Name",
              "type": "text",
              "required": true,
              "autofocus": true
            }
          },
          {
            "tag": "input",
            "wrapperTag": "fieldset",
            "attributes": {
              "placeholder": "Your Email Address",
              "type": "email",
              "required": true
            }
          },
          {
            "tag": "input",
            "wrapperTag": "fieldset",
            "attributes": {
              "placeholder": "Your Phone Number",
              "type": "tel",
              "pattern": "[0-9]{3}-[0-9]{3}-[0-9]{4}",
              "required": true
            }
          },
          {
            "tag": "input",
            "wrapperTag": "fieldset",
            "attributes": {
              "placeholder": "Your Website (http:// or https://)",
              "type": "url",
              "required": true
            }
          },
          {
            "tag": "textarea",
            "wrapperTag": "fieldset",
            "attributes": {
              "placeholder": "Type your Message Here...",
              "required": true
            }
          },
          {
            "tag": "button",
            "text": "Submit",
            "wrapperTag": "fieldset",
            "attributes": {
              "name": "submit",
              "type": "submit",
              "id": "contact-submit",
              "data-submit": "...Sending"
            }
          }
        ]
      }
    }
  }
}
