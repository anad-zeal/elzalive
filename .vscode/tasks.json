{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy to Bluehost",
      "type": "shell",
      "command": "./deploy.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Deploy (dry run)",
      "type": "shell",
      "command": "./deploy.sh",
      "args": ["--dry"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}